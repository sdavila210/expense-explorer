<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Plan a new trip:</h3>

        <form class="form new-trip-form">
            <div class="form-group">
                <label for="trip-location">Location:</label>
                <input class="form-input" type="text" id="trip-location" name="trip-location" required />
            </div>
            <div class="form-group">
                <label for="trip-dates">Travel Dates:</label>
                <input class="form-input" type="text" id="trip-dates" name="trip-dates" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Trip</button>
            </div>
        </form>
    </div>

    {{#if trips.length}}
    <div class="col-md-6 trip-list">
        <h3>Current Trips:</h3>

        {{#each trips as |trip|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4>{{trip.location}}</h4>
                <p>Travel Dates: {{trip.travel_dates}}</p>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger delete-trip" data-id="{{trip.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>