<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Plan a new trip:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="project-name">Where to?:</label>
                <input class="form-input" type="text" id="project-name" name="project-name" />
            </div>
            <div class="form-group">
                <label for="project-funding-hotel">Hotel Costs ($):</label>
                <input class="form-input" type="number" id="project-funding-hotel" name="project-funding-hotel" />
            </div>
            <div class="form-group">
                <label for="project-funding-transportation">Transportation Costs ($):</label>
                <input class="form-input" type="number" id="project-funding-transportation"
                    name="project-funding-transportation" />
            </div>
            <div class="form-group">
                <label for="project-funding-food">Food Costs ($):</label>
                <input class="form-input" type="number" id="project-funding-food" name="project-funding-food" />
            </div>
            <div class="form-group">
                <label for="project-funding-attractions">Attractions Costs ($):</label>
                <input class="form-input" type="number" id="project-funding-attractions"
                    name="project-funding-attractions" />
            </div>
            <div class="form-group">
                <label for="project-desc">Additional Notes:</label>
                <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if trip.length}}
    <div class="col-md-6 project-list">
        <h3>Current Trips Planned:</h3>

        {{#each trips as |trip|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/project/{{trip.id}}">{{trip.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{trip.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>